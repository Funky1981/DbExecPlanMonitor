{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "MonitoredDatabase": "Server=.;Database=YourDatabase;Integrated Security=true;TrustServerCertificate=true;",
    "MetricsStore": "Server=.;Database=DbExecPlanMetrics;Integrated Security=true;TrustServerCertificate=true;"
  },
  "Monitoring": {
    "SamplingIntervalMinutes": 5,
    "TopOffendersCount": 10,
    "RegressionThresholdPercent": 25,
    "HotPlanCpuThresholdMs": 5000,
    "EnableRemediation": false
  },
  "Alerting": {
    "Channels": [ "Console" ],
    "EmailSettings": {
      "SmtpServer": "",
      "SmtpPort": 587,
      "FromAddress": "",
      "ToAddresses": []
    },
    "TeamsWebhookUrl": "",
    "SlackWebhookUrl": ""
  }
}
